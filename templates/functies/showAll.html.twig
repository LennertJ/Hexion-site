{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <center><h1>functies</h1></center>
        <table class="table table-dark" style="margin-bottom: 0;" >
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titel</th>
                <th scope="col">Description</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for functie in functies %}
            <tr>
                <th scope="row">{{ functie.id }}</th>
                <td>{{ functie.titel }}</td>
                <td>{{ functie.beschrijving }}</td>
                <td>
                    <a class="edit-buttons" href="{{ path('editfunctie',{id: functie.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a class="edit-buttons" href="{{ path('deletefunctie',{id: functie.id}) }}" onclick="return confirm('are u sure?') ">
                        <i class="far fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr style="margin-top: 0;" />
        <div class="contentAlignend">
            <a href=" {{ path('addfunctie') }}"><button type="submit" class="btn btn-success" >voeg Functie toe</button></a>
        </div>

    </div>
{% endblock %}
